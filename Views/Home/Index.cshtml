@model List<Contact>
@{
    ViewBag.Title = "My Contacts";
}
<!--Simple home page with loaded contact list from db-->

<h2>Contact List</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        <!--Loads each ContactList item into a row-->
        @foreach (var contact in Model)
        {
            if (contact != null)
            {
                <tr>
                    <td>
                        <!--Creates route to details page when name is selected by user-->
                        <a class="nav-link"
                           asp-controller="Contact" asp-action="Details"
                           asp-route-id="@contact.ContactId"
                           asp-route-slug="@contact.Slug.Replace(" ","-")">
                           @contact.FirstName @contact.LastName
                        </a>
                    </td>
                    <td>@contact.Email</td>
                    <td>@contact.Phone</td>
                    <td>@contact.Category.CategoryName</td>
                </tr>
            }
        }
    </tbody>
    <a asp-controller="Contact" asp-action="Add" class="btn btn-outline-success">Add New Contact</a>
</table>
